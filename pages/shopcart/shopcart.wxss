/* pages/shopcart/shopcart.wxss */
view,
text {
  box-sizing: border-box;
}
.shopcart{
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #f2f2f2;
}
.top{
  height: 300rpx;
  /* background: #fff; */
  background: linear-gradient(30deg, rgb(32,202,155) 30%, rgb(48,188,189), rgb(28,135,231));
  text-align: center;
  /* box-shadow: 0rpx 5rpx 10rpx #ccc; */
  margin-bottom: 20rpx;
}
.top .imgs{
  width: 100%;
  height: 220rpx;
  line-height: 220rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.top image{
  height: 150rpx;
  width: 150rpx;
  display: block;
  border-radius: 150rpx;
  border: 1px solid #ccc;
  margin: 0 auto;
}
.top .price{
  font-size: 28rpx;
}
.top .price .money{
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}
.shoplist{
  width: 100%;
  min-height: 500rpx;
  background: #f5f5f5;
  padding:0 20rpx 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.shoplist .item{
  width: 49%;
  height: 450rpx;
  background: #fff;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.shoplist .item image{
  height: 150rpx;
  width: 150rpx;
}
.food{
  height: 240rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.foodname{
  font-size: 26rpx;
  color: #666;
  height: 50rpx;
  line-height: 50rpx;
}
.foodprice{
  font-size: 28rpx;
  color: #14d0a0;
  height: 50rpx;
  line-height: 50rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}